                                            <div class="creat_account">
                                                <h3>Shipping Details</h3>
                                                <input type="checkbox" id="f-option3" name="selector" />
                                                <label for="f-option3">Ship to a different address?</label>
                                            </div>
                                            <textarea class="form-control" name="message" id="message" rows="1"
                                                placeholder="Order Notes"></textarea>
                                        </div>
                                        <div class="col-md-12">
                                            <button type="submit" class="btn_3"
                                                style="margin: auto;display:block;">Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="changeprofile">
                            {{#each add}}
                            <div class="card">
                                <div class="card-header d-flex" id="headingTwo">
                                    <h5 class="mb-0">
                                        {{!-- <button class="btn btn-link collapsed" data-toggle="collapse"
                                            data-target="#collapseTwo" aria-expanded="false"
                                            aria-controls="collapseTwo">
                                            Collapsible Group Item #2
                                        </button> --}}
                                        <input type="radio" form="payForm" value="{{this.deliveryDetails._id}}"
                                            name="address" class="btn btn-link collapsed" data-toggle="collapse"
                                            data-target="#collapseTwo{{this.deliveryDetails._id}}" aria-expanded="false"
                                            aria-controls="collapseTwo" required>
                                        {{this.deliveryDetails.first_name}}
                                    </h5>
                                    <h5 class="ml-auto"><i onclick="deleteAddress('{{this.deliveryDetails._id}}')"
                                            class="fa fa-trash"></i></h5>
                                </div>
                                <div id="collapseTwo{{this.deliveryDetails._id}}" class="collapse"
                                    aria-labelledby="headingTwo" data-parent="#accordion">
                                    <div class="card-body">
                                        <h5 class="text-primary">Full Name:
                                            {{this.deliveryDetails.first_name}}.{{this.deliveryDetails.last_name}}<br>
                                            Phone Number {{this.deliveryDetails.phone_number}}<br>
                                            Email: {{this.deliveryDetails.email}}<br>
                                            Address:
                                            {{this.deliveryDetails.address1}}{{this.deliveryDetails.address2}}<br>
                                            City: {{this.deliveryDetails.city}}
                                            District:{{this.deliveryDetails.district}}<br>
                                            Message: {{this.deliveryDetails.message}}
                                        </h5>

                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">

                    <div class="order_box">

                        <h2>Your Order</h2>

                        <ul class="list">
                            <li>
                                <a href="#">Product
                                    <span>Total</span>
                                </a>
                            </li>
                            <li>
                                {{#each datas}}
                                <a href="#"><span class="pname">{{this.product.product_name}}</span>
                                    <span class="middle">x {{this.quantity}}</span>
                                    <span class="last">${{this.price}}.00</span>

                                </a>
                                {{/each}}
                            </li>
                        </ul>

                        <ul class="list list_2">
                            {{!-- <li>
                                <a href="#">Subtotal
                                    <span>$2160.00</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">Shipping
                                    <span>Flat rate: $50.00</span>
                                </a>
                            </li> --}}
                            <li>
                                <a href="#">Total
                                    <span>${{total.[0].total}}</span>
                                </a>
                            </li>
                        </ul>
                        <form id="payForm">


                            <div class="payment_item">
                                <div class="radion_btn">
                                    <input type="radio" id="f-option5" name="payment-method" value="COD">
                                    <label for="f-option5">Cash on Delivery</label>
                                    <div class="check"></div>
                                </div>
                                <p>
                                    Cash on Delivery Available
                                </p>
                            </div>
                            <div class="payment_item active">
                                <div class="radion_btn">
                                    <input type="radio" id="f-option6" name="payment-method" value="online">
                                    <label for="f-option6">Online </label>
                                    <img src="img/product/single-product/card.jpg" alt="" />
                                    <div class="check"></div>
                                </div>
                                <p>
                                    Give Your Correct Payment details
                                </p>
                            </div>

                            <div class="creat_account">
                                <input type="checkbox" id="f-option4" name="selector" />
                                <label for="f-option4">Iâ€™ve read and accept the </label>
                                <a href="#">terms & conditions*</a>
                            </div>
                            <div id="rdio-btn" class="alert alert-danger" role="alert" style="display: none;">
                                Choose Your payment Option
                            </div>
                            {{!-- <button class="btn_3">Proceed to Pay</button> --}}
                            <button value="submit" type="submit" class="btn_3" style="margin: auto;">Proceed to
                                Paypal</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
