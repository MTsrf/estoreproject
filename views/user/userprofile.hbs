<div class="light-style flex-grow-1 container-p-y user-profile">
    <div class="user-profile-container">
        <h4 class="font-weight-bold py-3 mb-4">
            Account settings
        </h4>

        <div class="card overflow-hidden" id="changeprofile">
            <div class="row no-gutters row-bordered row-border-light">
                <div class="col-md-3 pt-0">
                    <div class="list-group list-group-flush account-settings-links">
                        <a class="list-group-item list-group-item-action active" data-toggle="list"
                            href="#account-general">General</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list"
                            href="#account-change-password">Change password</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list"
                            href="#account-info">Info</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list" 
                            href="#Myreviewandrating">My Reviews and Rating</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list"
                            href="#account-connections">Manage Address</a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="account-general">
                            {{#each user}}
                            <form id="userProfile" method="post" action="/updataUserProfile"
                                enctype="multipart/form-data">
                                <div class="card-body media align-items-center">
                                    {{#if this.images}}
                                    <img id="preview" src="/Images/profileimages/{{this.images}}" alt="profile"
                                        class="d-block ui-w-80">
                                    {{else}}
                                    <img id="preview" src="/Images/IMG/download.png" alt="profile"
                                        class="d-block ui-w-80">
                                    {{/if}}
                                    <div class="d-flex">
                                        <div id="user_img" style="display: none;" class="media-body ml-4">
                                            <label class="btn btn-outline-primary">
                                                Upload new photo
                                                <input type="file" class="account-settings-fileinput"
                                                    onchange="readURL(this);" value="{{this.images}}"
                                                    name="profileimages">
                                            </label> &nbsp;
                                            <div id="user_des" style="display: none;" class="text-light small mt-1">
                                                Allowed
                                                JPG, GIF or PNG. Max size of 800K
                                            </div>
                                        </div>
                                    </div class="m-5">
                                    <button style="margin-left: 28px;margin-top: -20px;" onclick="editProfile()"
                                        type="button" class="btn btn-default md-btn-flat">Edit Profile</button>
                                </div>
                                <hr class="border-light m-0">

                                <div class="card-body">
                                    <div class="form-group">
                                        <label class="form-label">Username</label>
                                        <input id="uname" type="text" class="form-control mb-1" value="{{this.email}}"
                                            disabled>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Name</label>
                                        <input id="fname" name="fname" type="text" class="form-control"
                                            value="{{this.full_name}}" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">E-mail</label>
                                        <input id="emailid" name="email" type="text" class="form-control mb-1"
                                            value="{{this.email}}" disabled>
                                        <div class="alert alert-warning mt-3">
                                            Your email is not confirmed. Please check your inbox.<br>
                                            <a href="javascript:void(0)">Resend confirmation</a>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Phone Number</label>
                                        <input id="phone_user" type="text" class="form-control" name="phone_number"
                                            value="{{this.phone_number}}" disabled>
                                    </div>
                                </div>
                                <div class="text-right m-4" style="display:none" id="sub-btn"> <button type="submit"
                                        class="btn btn-primary">Save
                                        changes</button></div>
                            </form>
                            {{/each}}
                        </div>
                        <div class="tab-pane fade" id="account-change-password">
                            <div class="card-body pb-2" id="chpass">
                                <form id="changePasswordUser">
                                    <div class="form-group">
                                        <label class="form-label">Current password</label>
                                        <input type="password" class="form-control" name="current_password" required
                                            minlength="8">
                                    </div>
                                    <div class="text-center">
                                        <p id="passwordchange-err" class="text-danger"></p>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label">New password</label>
                                        <input type="password" class="form-control" name="password" id="pass" required
                                            minlength="8">
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label">Repeat new password</label>
                                        <input type="password" class="form-control" name="password1">
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Save
                                            changes</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="account-info">
                            <div class="changeinfo">
                                {{#each infos}}
                                <form id="infoForm">
                                    <button style="margin-left: 28px;margin-top: -20px;" onclick="editInfo()"
                                        type="button" class="btn btn-default md-btn-flat mt-3">Edit Info</button>
                                    <div class="card-body pb-2">

                                        <div class="form-group">
                                            <label class="form-label">Bio</label>
                                            <textarea class="form-control" id="bio" name="bioinf" rows="5"
                                                disabled>{{this.info.bio}}</textarea>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label">Birthday</label>
                                            <input type="text" class="form-control" value="{{this.info.dob}}" disabled
                                                id="dob" name="dobs">
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label">Country</label>
                                            <input type="text" class="form-control" value="{{this.info.country}}"
                                                disabled id="country" name="countrys">
                                        </div>


                                    </div>
                                    <input type="text" name="id" value="{{this.info._id}}" hidden>
                                    <hr class="border-light m-0">
                                    <div class="card-body pb-2">

                                        <h6 class="mb-4">Contacts</h6>
                                        <div class="form-group">
                                            <label class="form-label">Phone</label>
                                            <input type="text" class="form-control" value="{{this.phone_number}}"
                                                disabled>
                                        </div>
                                    </div>
                                    <div class="text-right m-4" style="display:none" id="info-btn"> <button
                                            type="submit" class="btn btn-primary">Save
                                            changes</button></div>
                                </form>
                                {{/each}}
                            </div>

