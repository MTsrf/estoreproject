<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#preview')
                    .attr('src', e.target.result)

            };

            reader.readAsDataURL(input.files[0]);
        }
    }


    function editProfile() {
        document.getElementById('fname').disabled = false,
            document.getElementById('emailid').disabled = false,
            document.getElementById('sub-btn').style.display = 'block',
            document.getElementById('user_des').style.display = 'block'
        document.getElementById('user_img').style.display = 'block'
    }

</script>