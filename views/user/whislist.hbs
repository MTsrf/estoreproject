<link rel="stylesheet" href="//cdn.materialdesignicons.com/3.7.95/css/materialdesignicons.min.css">
<!--================Home Banner Area =================-->
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Whislist</h2>
                        <p>Home <span>-</span> whislist</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->

{{#if datas}}
<div class="user-whilist">

    <div class="row">
        <div class="row align-items-center latest_product_inner">
            {{#each datas}}
            <div class="col-lg-4 col-sm-6">
                <a href="/product-singleview/{{this.whislist._id}}"><div class="single_product_item">
                    <img src="/img/{{this.whislist.Images.[0].productImg.[0]}}" alt="">
                    <div class="single_product_text">
                        <h4>{{this.whislist.product_name}}</h4>
                        <h3>{{this.whislist.price}}</h3>
                        <a href="#" class="add_cart"><i onclick="removeWhislist('{{this.whislist._id}}')" class="ti-heart"></i></a>
                    </div>
                </div></a>
            </div>
            {{/each}}
            
            <div class="col-lg-12">
                <div class="pageination">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <i class="ti-angle-double-left"></i>
                                </a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">5</a></li>
                            <li class="page-item"><a class="page-link" href="#">6</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <i class="ti-angle-double-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="empty-cart">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body cart">
                <div class="col-sm-12 empty-cart-cls text-center">
                    <img src="https://i.imgur.com/dCdflKN.png" width="130" height="130" class="img-fluid mb-4 mr-3">
                    <h3><strong>Your Whislist is Empty</strong></h3>
                    <h4>Add something to make me happy :)</h4>
                    <a href="/" class="btn btn-primary cart-btn-transform m-3" data-abc="true">continue shopping</a>


                </div>
            </div>
        </div>


    </div>
</div>
{{/if}}