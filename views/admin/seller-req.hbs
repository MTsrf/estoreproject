<!-- Category -->
<div class="orders mt-5 p-5">
    <div class="row">
        <div class="col-xl-11 mx-auto category-top">
            <div class="card">
                <div class="card-body mb-2">

                    <div class="input-group mb-3">
                        <h4 class="box-title">Seller Request </h4>
                    </div>
                </div>
                <div class="card-body--">
                    <div class="table-stats order-table ov-h">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>index</th>
                                    <th>Name</th>
                                    <th>Phone Number</th>
                                    <th>Email</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data}}
                                <tr>
                                    <td class="create_index">{{ inc @index}} </td>
                                    <td > <span class="products">{{this.full_name}}</span> </td>
                                    <td> <span class="products">{{this.phone_number}}</span>  </td>
                                    <td> <span class="products">{{this.email}}</span>  </td>
                                    <td><a href="/admin/accept-seller/{{this._id}}"><button type="button" class="btn btn-danger">Accept</button></a></td>
                                </tr>
                                {{/each}}
                                
                            </tbody>
                        </table>
                    </div> <!-- /.table-stats -->
                </div>
            </div> <!-- /.card -->
        </div> <!-- /.col-lg-8 -->
    </div>
</div>
<!-- /.Category -->


