<!-- Category -->
<div class="orders mt-5 p-5">
    <div class="row">
        <div class="col-xl-11 mx-auto category-top">
            <div class="card">
                <div class="card-body mb-2">

                    <div class="input-group mb-3">
                        <h4 class="box-title">All Products</h4>
                    </div>
                </div>
                <div class="card-body--">
                    <div class="table-stats order-table ov-h">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>index</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Brand Name</th>
                                    <th>Seller</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data}}
                                <tr>
                                    <td class="create_index">{{ inc @index}} </td>
                                    <td><img style="width: 90px;" src="/Images/productImages/{{this.Images.[0]}}" alt="" /></td>
                                    <td> <span>{{this.product_name}}</span> </td>
                                    <td> <span>{{this.category.category}}</span> </td>
                                    <td> <span>{{this.brand_name}}</span> </td>
                                    <td> <span>{{this.seller.full_name}}</span> </td>
                                    <td><a href=""><button type="button" class="btn btn-primary">View</button></a>
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div> <!-- /.table-stats -->
                </div>
            </div> <!-- /.card -->
        </div> <!-- /.col-lg-8 -->
    </div>
</div>
<!-- /.Category -->


<script type="text/javascript">
    function isDel(delId) {
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this imaginary file!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: '/seller/delete-products/' + delId,
                        method: 'get',
                        success: (response) => {
                            location.reload()
                        }
                    })
                } else {
                    swal("Your imaginary file is safe!");
                }
            });
    }
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();
    });
</script>