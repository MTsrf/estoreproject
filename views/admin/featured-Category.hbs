<!-- Category -->
<style>
.img-prw .delete-icon {
    background: black;
    border-radius: 13px;
    color: #fff;
    font-weight: bold;
    padding: 4px 8px;
    position: absolute;
    top: -12px;
    right: -10px;
}

.img-prw .hero{
  background-size: cover !important;
  background-repeat: no-repeat !important;
  margin: 30px auto;
  padding: 150px;
  position: relative;
  width: 70%;
}

.img-prw .hero h5 {
    color: #E9AD28;
    text-transform: uppercase;
    letter-spacing: 4px;
    margin-bottom: 22px;
   text-align: center;
}

